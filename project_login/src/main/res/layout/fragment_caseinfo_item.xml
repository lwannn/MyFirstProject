<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginTop="8dp"
    android:background="#dbdbdb"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="3dp"
    app:cardMaxElevation="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff">

        <ImageView
            android:id="@+id/img_head"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="8dp"
            android:scaleType="centerCrop"
            android:src="@drawable/head_image" />

        <TextView
            android:id="@+id/tv_caseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_head"
            android:layout_alignTop="@id/img_head"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/img_head"
            android:gravity="center_vertical"
            android:text="你好"
            android:textColor="#000"
            android:textSize="19sp" />

        <TextView
            android:id="@+id/tv_caseTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/img_head"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/img_head"
            android:layout_marginBottom="6dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:text="2016.1.2"
            android:textColor="#000"
            android:textSize="10sp" />

        <LinearLayout
            android:id="@+id/lay_line"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/img_head"
            android:layout_marginTop="16dp"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:visibility="gone">

            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:background="#dbdbdb" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_beizhu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/img_head"
            android:layout_marginTop="28dp"
            android:layout_toRightOf="@id/img_head"
            android:paddingLeft="8dp"
            android:paddingRight="16dp"
            android:text="水电费了空间里疯狂的借口了敬爱放老家了"
            android:textSize="15dp" />

        <LinearLayout
            android:id="@+id/line1"
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:layout_below="@id/tv_beizhu"
            android:layout_marginTop="16dp"
            android:layout_toRightOf="@id/img_head"
            android:orientation="horizontal"
            android:background="#ffffff"
            >
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:background="#dbdbdb"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lay_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line1"
            android:layout_toRightOf="@id/img_head"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/call" />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:text="dianhua"
                android:textSize="14dp" />
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>