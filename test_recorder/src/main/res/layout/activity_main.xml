<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.test_recorder.MainActivity">

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@null"></ListView>

    <!--minHeight="0dp"的作用是将btn默认的padding取消掉-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.example.test_recorder.RecorderButton
            android:id="@+id/btn_recorder"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="7dp"
            android:layout_marginTop="6dp"
            android:background="@drawable/btn_state_normal"
            android:minHeight="0dp"
            android:padding="10dp"
            android:text="@string/click_recorder"
            android:textColor="#fff" />
    </FrameLayout>
</LinearLayout>
